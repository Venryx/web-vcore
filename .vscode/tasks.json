{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc (global problem-checking)",
			"type": "shell",

			// tsc is not reliably getting placed in "./node_modules/.bin", fsr
			/*"command": "./node_modules/.bin/tsc",
			"args": ["--watch", "--noEmit", "--project", "."],*/
			"command": "node",
			"args": ["./node_modules/typescript/bin/tsc", "--watch", "--noEmit", "--project", "."],

			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}